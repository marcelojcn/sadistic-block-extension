{
  "manifest_version": 3,
  "name": "Sadistic Focus",
  "description": "Allow you to focus on your work by blocking distracting websites",
  "version": "1.1",
  "icons": {
    "16": "images/stop_16.png",
    "32": "images/stop_32.png",
    "128": "images/stop_128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "Sadistic Focus",
    "default_popup": "static/popup.html",
    "default_icon": {
        "16": "images/stop_16.png",
        "32": "images/stop_32.png",
        "128": "images/stop_128.png"
    }
  },
  "permissions": [
  "webNavigation",
  "tabs",
  "storage"
]
}