{
  "manifest_version": 3,
  "name": "Sadistic Focus",
  "description": "Here to make you be proactive!",
  "version": "1.2",
  "icons": {
    "16": "images/stop_16.png",
    "32": "images/stop_32.png",
    "128": "images/stop_128.png"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Sadistic Focus",
    "default_popup": "static/popup.html",
    "default_icon": {
      "16": "images/stop_16.png",
      "32": "images/stop_32.png",
      "128": "images/stop_128.png"
    }
  },
  "permissions": ["webNavigation", "tabs", "storage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
